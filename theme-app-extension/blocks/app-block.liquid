    "javascript": "quickorder.js",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Quick order app"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "App for disable perosn make them buy on shop easily."
      }
      
    ]
  }
{% endschema %}

